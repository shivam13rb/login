doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../../../favicon.ico')
    title Starter Template for Bootstrap
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    // Custom styles for this template
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='#') NodeAuth
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
         if user
          li(class=(title == 'Members' ? 'active' : ' '))
            a.nav-link(href='/')
              | Members
              
         if !user 
          li(class=(title == 'Register' ? 'active' : ' '))
            a.nav-link(href='/users/register') Register
                
          
          li(class=(title=='Login' ? 'active' : ' '))
            a.nav-link.disabled(href='/users/login') Login
              
        ul.nav.navbar-nav.navbar-right
         if user 
          li 
            a.nav-link.disabled(href='/users/logout') Logout
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
    main.container(role='main')
  

   .container 
    != messages()
    block content

